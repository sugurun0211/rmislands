<div class="container my-3">
  <div class="row">
    <div class="col-lg-8">
      <%= search_form_for @q_header, url: post_images_path do |f| %>
        <%= f.search_field :spot_name_or_island_name_cont, placeholder: "スポットまたは島の名前", class: "form-control" %>
    </div>
    <div class="col-lg-2">
      <%= f.submit '検索', class: "btn btn-md btn-primary form-control" %>
    </div>
      <% end %>
  </div>
  <hr>
  <div class="row">
  <% @post_images.each do |post_image| %>
    <div class="col-md-4 p-4">
      <div class="card shadow-sm" style="width: 40rem height: 40rem;">
        <%= link_to post_image_path(post_image.id) do %>
          <h5 class="card-header text-center"><%= post_image.spot_name %></h5>
        <% end %>
        <div class="card-img-top p-4">
          <%= link_to post_image_path(post_image.id) do %>
            <%= attachment_image_tag post_image, :image, :fill, 500, 500, class: "img-fluid" %>
          <% end %>
        </div>
        <div class="card-body">
          <p class="card-title text-center"><%= post_image.island_name %></p>
          <p class="card-text text-center"><%= "投稿者：#{post_image.user.name} さん" %></p>
          <p class="card-text text-center">投稿日：<%= post_image.created_at.strftime('%Y/%m/%d') %></p>
　　　　　<%= link_to "#{post_image.user.name} さんの投稿", user_path(post_image.user), class: "btn btn-block btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>